#include <iostream>

using namespace std;
int main() {
	int i, j;
	cout << "Введите высоту и длину матрицы" << endl;
	cin >> i >> j;
	int summ;
	int minsumm = 2000000000;
	int minnumber;
	int matrix[100][100] = {};
	cout << "Введите элементы матрицы: " << std::endl;
	for (short a = 0; a < i; a++)
		for (short b = 0; b < j; b++) {
			cin >> matrix[a][b];
		}
	cout << endl;
	for (short b = 0; b < j; b++) { //a строки и b столбцы
		summ = 0;
		for (short a = 0; a < i; a++) {
			summ += matrix[a][b];
		}
		if (summ < minsumm) {
			minsumm = summ;
			minnumber = b;
		}
	}
	for (short a = 0; a < i; a++) {
		matrix[a][minnumber] += 3;
	}
	for (short a = 0; a < i; a++) {
		for (short b = 0; b < j; b++) {
			cout << matrix[a][b] << " ";
		}
		cout << endl;
	}
	return 0;
}
