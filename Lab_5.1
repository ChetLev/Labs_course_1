#include <iostream>
#include <vector>

int main() {
    std::vector<int> numbers;
    int n;

    std::cout << "Введите количество чисел в последовательности: ";
    std::cin >> n;

    std::cout << "Введите " << n << " натуральных чисел:" << std::endl;
    for (int i = 0; i < n; ++i) {
        int num;
        std::cin >> num;
        numbers.push_back(num);
    }

    int sum = 0;
    int maxNum = -1;
    int maxIndex = -1;

    for (int i = 0; i < n; ++i) {
        if (numbers[i] % 10 == 0 || numbers[i] % 10 == 7) {
            sum += numbers[i];
            if (numbers[i] > maxNum) {
                maxNum = numbers[i];
                maxIndex = i + 1;
            }
        }
    }

    std::cout << "Сумма чисел, оканчивающихся на 0 или 7: " << sum << std::endl;
    if (maxNum != -1) {
        std::cout << "Наибольшее число, оканчивающееся на 0 или 7: " << maxNum << std::endl;
        std::cout << "Номер этого числа в последовательности: " << maxIndex << std::endl;
    } else {
        std::cout << "Нет чисел, оканчивающихся на 0 или 7." << std::endl;
    }

    return 0;
}
