#include <iostream>

int main() {
    long long N;
    std::cout << "Введите натуральное число N (N < 10^9): ";
    std::cin >> N;

    if (N <= 0 || N >= 1000000000) {
        std::cout << "Ошибка: число должно быть натуральным и меньше 10^9." << std::endl;
        return 1;
    }

    int sumEvenDigits = 0;

    while (N > 0) {
        int digit = N % 10;
        if (digit % 2 == 0) {
            sumEvenDigits += digit;
        }
        N /= 10;
    }

    std::cout << "Сумма четных цифр числа: " << sumEvenDigits << std::endl;

    return 0;
}
